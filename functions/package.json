{
  "name": "functions",
  "scripts": {
    "build": "tslint -p tslint.json && tsc",
    "build-w": "tslint -p tslint.json && tsc -w",
    "serve": "firebase serve --only functions",
    "shell": "npm run build && firebase experimental:functions:shell",
    "start": "firebase experimental:functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Firebase\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run build-w\" \"npm run serve\""
  },
  "main": "lib/index.js",
  "dependencies": {
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-validator": "^4.3.0",
    "firebase-admin": "~5.4.2",
    "firebase-functions": "^0.7.1"
  },
  "devDependencies": {
    "@types/express": "^4.11.0",
    "concurrently": "^3.5.1",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3"
  },
  "private": true
}
